/** Grid styles
 * -------------
 */

.container
  position relative
  width 100%
  max-width $container-max-width
  margin 0 auto
  padding 0 20px
  box-sizing border-box

.column,
.columns
  width 100%
  float left
  box-sizing border-box

// for devices larger than 400px
@media (min-width: 400px)
  .container
    width 85%
    padding 0

@media (min-width 550px)
  .container
    width 80%

  .columns
    margin-left 4%

  .columns:first-child
    margin-left 0

  .one.columns
    width 4.6666666667%
