/** Buttons Styles
 * -------------
 */

.button,
button
input[type="submit"],
input[type="reset"],
input[type="button"]
  display inline-block
  height 38px
  padding 0 30px

  background-color transparent
  border-radius 4px
  border 1px solid #bbb
  box-sizing border-box

  color #555
  cursor pointer
  font-size 11px
  font-weight 600
  line-height 38px
  letter-spacing .1rem
  text-align center
  text-transform uppercase
  text-decoration none
  white-space nowrap


  &:hover,
  &:focus
    color #333
    border-color #888
    outline 0

  &.button-primary
    color #fff
    background-color #33C3F0
    border-color #33c3f0

    &:hover,
    &:focus
      color #fff
      background-color #1eaedb
      border-color #1eaedb


