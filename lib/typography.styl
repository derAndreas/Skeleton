/** Typography Styles
 * -------------
 */

h1,
h2,
h3,
h4,
h5,
h6
  margin-top 0
  rempx(margin-bottom, 2)
  font-weight 300

h1
  rempx(font-size, $head1-size)
  line-height 1.2
  letter-spacing -.1rem

h2
  rempx(font-size, $head2-size)
  line-height 1.25
  letter-spacing -.1rem

h3
  rempx(font-size, $head3-size)
  line-height 1.3
  letter-spacing -.1rem

h4
  rempx(font-size, $head4-size)
  line-height 1.35
  letter-spacing -.08rem

h5
  rempx(font-size, $head5-size)
  line-height 1.5
  letter-spacing -.05rem

h6
  rempx(font-size, $head6-size)
  line-height 1.6
  letter-spacing 0

@media (min-width: 550px)
  h1
    rempx(font-size, $head1-large-size)
  h2
    rempx(font-size, $head2-large-size)
  h3
    rempx(font-size, $head3-large-size)
  h4
    rempx(font-size, $head4-large-size)
  h5
    rempx(font-size, $head5-large-size)
  h6
    rempx(font-size, $head6-large-size)

p
  margin-top 0
