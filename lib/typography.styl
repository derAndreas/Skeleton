/** Typography Styles
 * -------------
 */

h1,
h2,
h3,
h4,
h5,
h6
  margin-top 0
  rempx(margin-bottom, 2)
  font-weight 300

h1
  rempx(font-size, 4)
  line-height 1.2
  letter-spacing -.1rem

h2
  rempx(font-size, 3.6)
  line-height 1.25
  letter-spacing -.1rem

h3
  rempx(font-size, 3)
  line-height 1.3
  letter-spacing -.1rem

h4
  rempx(font-size, 2.4)
  line-height 1.35
  letter-spacing -.08rem

h5
  rempx(font-size, 1.8)
  line-height 1.5
  letter-spacing -.05rem

h6
  rempx(font-size, 1.5)
  line-height 1.6
  letter-spacing 0

@media (min-width: 550px)
  h1
    rempx(font-size, 5)
  h2
    rempx(font-size, 4.2)
  h3
    rempx(font-size, 3.6)
  h4
    rempx(font-size, 3)
  h5
    rempx(font-size, 2.4)
  h6
    rempx(font-size, 1.5)

p
  margin-top 0
